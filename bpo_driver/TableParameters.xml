<?xml version="1.0" encoding="UTF-8"?>
<Settings>
  <Page Name="Основные">
    <Group Name="Подключение">
      <Parameter Name="BaseUrl" Caption="Base URL" Type="String" DefaultValue="https://kaspi.kz"/>
      <Parameter Name="Token" Caption="Token" Type="String" DefaultValue=""/>
      <Parameter Name="PointId" Caption="Point ID" Type="String" DefaultValue=""/>
    </Group>
    <Group Name="Таймауты">
      <Parameter Name="MaxWaitSeconds" Caption="Максимальное время ожидания" Type="Number" DefaultValue="30"/>
      <Parameter Name="PollIntervalSeconds" Caption="Интервал паузы поллинга" Type="Number" DefaultValue="3"/>
    </Group>
    <Group Name="Диагностика">
      <Parameter Name="Verbose" Caption="Подробный лог" Type="Boolean" DefaultValue="false"/>
    </Group>
  </Page>
</Settings>
